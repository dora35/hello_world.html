class Food(object):
	def __init__(self, name, price, taste):
		self.name = name
		self.price = price
		self.taste = taste
cherry = Food(name ="Cherry", price ="10yuan", taste ="Sweet")	

print(cherry.name)
print(cherry.price)
print(cherry.taste)	
	
